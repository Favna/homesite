{
  "extends": "@sapphire/ts-config",
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "ES6",
    "paths": {
      "@Config/*": ["components/Config/*"],
      "@Mui/*": ["components/Material-UI/*"],
      "@Next/*": ["components/Next/*"],
      "@Pres/*": ["components/Presentational/*"],
      "@Assets/*": ["components/Assets/*"],
      "@Svgs/*": ["components/Assets/Svgs/*"],
      "@Utils/*": ["utils/*"]
    }
  },
  "include": ["."],
  "exclude": ["public/sw.js", "public/workbox*.js"]
}
