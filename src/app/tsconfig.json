{
  "extends": "../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "noImplicitAny": false,
    "noEmit": true,
    "lib": ["dom", "es2020"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@Config/*": ["components/Config/*"],
      "@Mui/*": ["components/Material-UI/*"],
      "@Next/*": ["components/Next/*"],
      "@Pres/*": ["components/Presentational/*"],
      "@Assets/*": ["components/Assets/*"],
      "@Svgs/*": ["components/Assets/Svgs/*"],
      "@Utils/*": ["utils/*"]
    },
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
