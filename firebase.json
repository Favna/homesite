{
  "functions": {
    "source": "dist/functions",
    "predeploy": ["yarn lint", "yarn typecheck-app", "yarn build-functions", "yarn build-app", "yarn copy-deps", "yarn install-deps"]
  },
  "hosting": {
    "site": "favware",
    "public": "dist/public",
    "predeploy": "yarn build-public",
    "rewrites": [
      {
        "source": "**/!(api)",
        "function": "favware"
      },
      {
        "source": "/api{,/**}",
        "run": {
          "serviceId": "graphql-pokemon",
          "region": "europe-west1"
        }
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
