{
  "name": "@favware/website",
  "version": "1.0.0",
  "description": "For hearth and home",
  "author": "@favware",
  "license": "MIT",
  "homepage": "https://favware.tech",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/website.git"
  },
  "bugs": {
    "url": "https://github.com/favware/website/issues"
  },
  "engines": {
    "node": "10"
  },
  "scripts": {
    "lint": "eslint src --fix --ext ts,tsx",
    "up": "yarn upgrade-interactive --latest",
    "dev": "next dev src/app",
    "build": "next build src/app",
    "start": "next start src/app",
    "export": "next export src/app",
    "preserve": "run-s clean build:** copy:**",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "cross-env NODE_ENV=production firebase deploy",
    "clean": "rimraf dist",
    "build:sitemap": "node scripts/sitemapGenerator.js",
    "build:app": "next build \"src/app\"",
    "build:functions": "tsc --project src/functions",
    "build:public": "cpx \"src/app/public/**/*.*\" \"dist/public\" -C",
    "copy:next": "cpx \"dist/next/static/**/*.*\" dist/public/_next/static -C",
    "copy:deps": "cpx \"*{package.json,yarn.lock,.yarnrc}\" \"dist/functions\" -C",
    "typecheck:app": "tsc --project src/app",
    "install:deps": "cd \"dist/functions\" && yarn install --frozen-lockfile",
    "style": "prettier --write --loglevel=warn src/**/*.{html,js,ts,tsx,babelrc,json}",
    "now:build": "cpx \".github/next.config.js\" \"src/app\" -C && next build src/app",
    "netlify:build": "run-s build export"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "clsx": "^1.1.0",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.1",
    "mdi-react": "^7.2.0",
    "next": "^9.4.0",
    "next-seo": "^4.4.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ga": "^2.7.0",
    "react-if": "^3.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@favware/eslint-config": "^3.3.1",
    "@favware/ts-config": "^1.1.3",
    "@rws-air/commitizen-config": "^1.1.3",
    "@rws-air/commitlint-config": "^1.1.3",
    "@rws-air/eslint-config": "^3.0.15",
    "@types/node": "^13.13.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "16.9.7",
    "@types/react-gtm-module": "^2.0.0",
    "cpx": "1.5.0",
    "cross-env": "7.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nextjs-sitemap-generator": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "3.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@rws-air"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@rws-air/commitizen-config"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --ext ts,tsx"
    ],
    "*.{html,babelrc,js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "acorn": "^6.4.1",
    "minimist": "^1.2.2",
    "kind-of": "^6.0.3"
  }
}
