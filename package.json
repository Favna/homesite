{
  "name": "@favware/website",
  "version": "1.0.0",
  "description": "For hearth and home",
  "author": "@favware",
  "license": "GPL-3.0",
  "homepage": "https://favware.tech",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/website.git"
  },
  "bugs": {
    "url": "https://github.com/favware/website/issues"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "start:ssr": "yarn build:ssr && yarn serve:ssr",
    "serve:ssr": "node dist/server",
    "build:dev": "ng build",
    "build:firebase": "pushd functions/ && yarn --ignore-engines && popd",
    "build:ssr": "yarn build:client-and-server-bundles && yarn compile:server",
    "build:client-and-server-bundles": "ng build --prod && ng run favware-site:server:production",
    "up": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@angular/animations": "8.2.4",
    "@angular/cdk": "8.1.4",
    "@angular/common": "8.2.4",
    "@angular/compiler": "8.2.4",
    "@angular/core": "8.2.4",
    "@angular/fire": "5.2.1",
    "@angular/flex-layout": "8.0.0-beta.27",
    "@angular/forms": "8.2.4",
    "@angular/material": "8.1.4",
    "@angular/platform-browser": "8.2.4",
    "@angular/platform-browser-dynamic": "8.2.4",
    "@angular/platform-server": "8.2.4",
    "@angular/pwa": "0.803.3",
    "@angular/router": "8.2.4",
    "@angular/service-worker": "8.2.4",
    "@ngmodule/material-carousel": "0.5.0",
    "@nguniversal/express-engine": "8.1.1",
    "@nguniversal/module-map-ngfactory-loader": "8.1.1",
    "common-tags": "1.8.0",
    "core-js": "3.2.1",
    "domino": "2.1.3",
    "express": "4.17.1",
    "firebase": "6.6.0",
    "fuse.js": "3.4.5",
    "hammerjs": "2.0.8",
    "moment": "2.24.0",
    "moment-duration-format": "2.3.2",
    "ngx-clipboard": "12.2.1",
    "ngx-markdown": "8.1.0",
    "normalize-scss": "7.0.1",
    "rxjs": "~6.5.3",
    "tslib": "1.10.0",
    "typeface-roboto": "0.0.75",
    "web-animations-js": "2.3.2",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.803.3",
    "@angular/cli": "8.3.3",
    "@angular/compiler-cli": "8.2.4",
    "@angular/language-service": "8.2.5",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@favware/tslint-config": "1.0.3",
    "@firebase/app-types": "0.4.3",
    "@firebase/util": "0.2.26",
    "@types/common-tags": "1.8.0",
    "@types/jasmine": "3.4.0",
    "@types/jasminewd2": "2.0.6",
    "@types/moment-duration-format": "2.2.2",
    "@types/node": "12.7.4",
    "bufferutil": "4.0.1",
    "codelyzer": "5.1.0",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.5",
    "jasmine-core": "3.4.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.3.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.0",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "lint-staged": "9.2.5",
    "reflect-metadata": "0.1.13",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tslint": "5.19.0",
    "typescript": "~3.5.3",
    "utf-8-validate": "5.0.2",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "ws": "7.1.2",
    "xhr2": "0.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,html,scss}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
