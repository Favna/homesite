{
  "name": "@favware/website",
  "version": "1.0.0",
  "description": "For hearth and home",
  "author": "@favware",
  "license": "MIT",
  "homepage": "https://favware.tech",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/website.git"
  },
  "bugs": {
    "url": "https://github.com/favware/website/issues"
  },
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "eslint src --fix --ext ts,tsx",
    "up": "yarn upgrade-interactive --latest",
    "dev": "next src/app",
    "build": "run-s typecheck-app build-public build-functions build-app",
    "preserve": "run-s build-public build-functions build-app copy-deps install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "cross-env NODE_ENV=production firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-functions": "tsc --project src/functions",
    "typecheck-app": "tsc --project src/app",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && yarn install"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.3",
    "@material-ui/icons": "^4.9.1",
    "clsx": "^1.1.0",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.1.0",
    "next": "^9.2.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-gtm-module": "^2.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@favware/eslint-config": "^3.2.0",
    "@favware/ts-config": "^1.1.2",
    "@firebase/app-types": "^0.5.1",
    "@rws-air/eslint-config": "^3.0.3",
    "@types/node": "^13.7.1",
    "@types/react": "^16.6.0",
    "@types/react-dom": "16.8.4",
    "@types/react-gtm-module": "^2.0.0",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "^3.1.0",
    "firebase-tools": "^7.1.0",
    "husky": "^4.2.3",
    "next-compose-plugins": "^2.2.0",
    "next-seo": "^4.1.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "2.6.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "serialize-javascript": "^3.0.0",
    "acorn": "^7.1.1",
    "minimist": "^1.2.2"
  }
}
