{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": false,
    "target": "es2015",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
